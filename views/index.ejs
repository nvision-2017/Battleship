  </head>
  <body>
  <style type="text/css">
    body {
      overflow-y: hidden;
      padding: 2em;
    }
    #menu-container {
      text-align: center;
       width: 100%;
      padding: 9em;
      background: url(/img/old_paper_scroll.png) no-repeat;
      background-size: contain;
    }
    #menu-container a {
      font-size: 2em;
      color: #662200;
      font-weight: bold;
      text-decoration: none;
      text-shadow: 0 0 4px #dec5a0;
    }
    #menu-container a:hover {
      text-shadow: 0 0 1px #000;
    }
  </style>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <ul class="menu" id="menu-container">
                    <li><a href="/war!">PLAY WITH RANDOM USER</a></li><br><br>
                    <li><a href="/online">PLAY WITH A SPECIFIC USER</a></li><br><br>
                    <li><a href="/myHistory">MY PLAY HISTORY</a></li><br><br>
                    <li><a href="/logout">LOGOUT</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- <pre id="notifications">
    </pre> -->
    <script   src="https://code.jquery.com/jquery-2.2.4.min.js"   integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="   crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
    <script src="/socket.io/socket.io.js" charset="utf-8"></script>
    <script type="text/javascript">
      var socket = io();
      $(function(){
        socket.on('notification', function(data){
          $("#notifications").html(JSON.stringify(data))
          var accepted = confirm(data.username + " challenged you for a game");
          if(accepted) {
            window.open('/u/'+data.username,'_self');
          }
        })
      });
    </script>
  </body>
</html>
